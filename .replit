modules = ["postgresql-16"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Run Java Web App"
author = 40738262
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn clean compile"

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn package"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn exec:java -Dexec.mainClass=\"com.attendance.Main\""

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn compile exec:java -Dexec.mainClass=\"com.attendance.UltraBasicServer\""
waitForPort = 5000

[deployment]
run = ["sh", "-c", "mvn compile exec:java -Dexec.mainClass=\"com.attendance.UltraBasicServer\""]

[[ports]]
localPort = 5000
externalPort = 80
